@model IBAMembersApp.Models.MessageViewModel

@{
    ViewBag.Title = "Archive Message";
}
@section navigation {
    @Html.Partial("MessagesPartial")
}
@section subnav
{
    <h2>@ViewBag.Title</h2>
}

<h3>Are you sure you want to Archive this?</h3>
<div>
    @Html.Partial("ReadonlyPartialView", Model)

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <dl class="dl-horizontal">
            <dt>
                &nbsp;
            </dt>

            <dd>
                <input type="submit" value="Archive" class="btn btn-success" /> <br /><br /><br />
                @Html.ActionLink("Back to Messages", "Index")
            </dd>
        </dl>
    }
</div>
